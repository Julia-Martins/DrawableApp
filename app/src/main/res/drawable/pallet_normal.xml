<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
        <stroke
            android:width="3dp"
            android:color="#FF999999"/>

            <padding
                android:top="0dp"
                android:right="0dp"
                android:left="0dp"
                android:bottom="0dp"
            />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FF999999"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
</layer-list>